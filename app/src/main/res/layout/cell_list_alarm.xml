<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5">

        <!-- 왼쪽 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

                <ImageView
                    android:id="@+id/iv_cell"
                    android:background="#009900"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">
                </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cell_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="이름 (000-0000-0000)"
                    android:textSize="15dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_cell_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_cell_target"
                    android:text="문자메시지, 전화"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_cell_ringtone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_cell_details"
                    android:text="기본 벨소리"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 오른쪽 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cell_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="00:00"
                android:textSize="25dp" />

            <Switch
                android:id="@+id/sw_cell_alarm"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>